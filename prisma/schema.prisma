generator client {
    provider = "prisma-client-js"
}

generator dbml {
    provider = "prisma-dbml-generator"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL") // uses connection pooling
}



model battles {
  id            Int       @id @default(autoincrement())
  battleTime    String  
  playerTag     String
  opponentTag   String
  playerCrowns  Int
  opponentCrowns Int
  clanId        String
  win           Boolean
}
